<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEFFA"
    tools:context=".Rider.wallet_fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="696dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:text="My Wallet"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="222dp"
                android:layout_margin="20dp"
                app:cardBackgroundColor="@color/button_color1"
                app:cardCornerRadius="40px"
                app:cardElevation="3dp"
                app:contentPadding="40px">

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="MY BALANCE:"
                    android:textColor="@color/textGray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="300px"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="DEPOSIT:"
                    android:textColor="@color/textGray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="125px"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="₱00.00"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tvDeposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="400px"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="₱00.00"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnTopUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100px"
                android:layout_marginTop="45px"
                android:background="@drawable/white_button"
                android:drawableEnd="@drawable/ic_baseline_add_box_24"
                android:elevation="50dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Top Up"
                android:textAlignment="viewStart"
                android:textColor="@color/textGray"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnCashOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100px"
                android:layout_marginTop="45px"
                android:background="@drawable/white_button"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
                android:elevation="50dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Cash Out"
                android:textAlignment="viewStart"
                android:textColor="@color/textGray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Back Card Information:"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnBank_eWallet"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginHorizontal="100px"
                android:layout_marginTop="45px"
                android:background="@drawable/white_button_border"
                android:drawableStart="@drawable/ic_baseline_credit_card_24"
                android:elevation="100dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="E-wallet\n09*****88"
                android:textAlignment="center"
                android:textColor="@color/textGray"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>