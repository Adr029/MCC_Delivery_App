<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/courier_pickup_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#223272"
                    android:fontFamily="@font/montserrat_bold"
                    android:padding="10dp"
                    android:text="Pending"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/pickuplinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pickup" />

            <TextView
                android:id="@+id/txt_sender_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Sender Location"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtsendernameID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_sender_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"
                android:text="Sender Name: "
                />

            <TextView
                android:id="@+id/txtsendercontactID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_sender_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingStart="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"
                android:text="Sender contact: "/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dropofflinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pickuplinearlayout"
            android:layout_marginBottom="5dp"
            android:padding="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/txt_receiver_loc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="30dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="Receiver Location"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txtreceivernameID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_receiver_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"
                android:text="Receiver Name: "
                />

            <TextView
                android:id="@+id/txtreceivercontactID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_receiver_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:paddingStart="30dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_medium"
                android:text="Receiver Contact: "/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/vehicletypelinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dropofflinearlayout"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/user_home_orderID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_content_copy_24"
                android:drawableTint="@color/textGray"
                android:fontFamily="@font/montserrat_medium"
                android:paddingStart="20dp"
                android:paddingEnd="10dp"
                android:text="Order ID: "
                android:textColor="@color/black">

            </TextView>

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/montserrat_medium"
                android:padding="10dp"
                android:text="Price :      180"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_vehicletype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pricelinearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vehicletypelinearlayout"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>