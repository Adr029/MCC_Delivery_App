<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".User.user_parceltransaction"
    tools:showIn="@layout/activity_user_parceltransaction">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <LinearLayout
          android:visibility="gone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true">
          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <ImageView
                  android:id="@+id/imageView"
                  android:layout_width="35dp"
                  android:layout_height="30dp"
                  android:src="@drawable/pickup"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="0.071"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintVertical_bias="0.264" />

              <ImageView
                  android:id="@+id/imageView2"
                  android:layout_width="6dp"
                  android:layout_height="50dp"
                  android:src="@drawable/line"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="0.103"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/imageView"
                  app:layout_constraintVertical_bias="0.027" />

              <ImageView
                  android:id="@+id/imageView3"
                  android:layout_width="35dp"
                  android:layout_height="30dp"
                  android:src="@drawable/location"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="0.071"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/imageView2"
                  app:layout_constraintVertical_bias="0.02" />

              <EditText
                  android:id="@+id/editTextPickUp"
                  android:layout_width="275dp"
                  android:layout_height="52dp"
                  android:background="@drawable/edit_text_round"
                  android:drawableRight="@drawable/gps"
                  android:elevation="10dp"
                  android:fontFamily="@font/avenir"
                  android:hint="Pick up Location"
                  android:padding="12dp"
                  android:textColor="@color/black"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="0.296"
                  app:layout_constraintStart_toEndOf="@+id/imageView"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintVertical_bias="0.263" />

              <EditText
                  android:id="@+id/editTextDestination"
                  android:layout_width="275dp"
                  android:layout_height="52dp"
                  android:background="@drawable/edit_text_round"
                  android:drawableRight="@drawable/gps"
                  android:elevation="10dp"
                  android:fontFamily="@font/avenir"
                  android:hint="Package Destination"
                  android:padding="12dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintHorizontal_bias="0.296"
                  app:layout_constraintStart_toEndOf="@+id/imageView3"
                  app:layout_constraintTop_toBottomOf="@+id/editTextPickUp"
                  app:layout_constraintVertical_bias="0.088" />
          </androidx.constraintlayout.widget.ConstraintLayout>
      </LinearLayout>
