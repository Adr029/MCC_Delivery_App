<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEFFA"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:paddingTop="25dp"
                    android:text="Create Your Account"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtRiderBasicInfo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="25dp"

                    android:fontFamily="@font/montserrat_medium"
                    android:paddingTop="25dp"
                    android:text="Basic Information"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etNameRider"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edit_text_round"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Name (as shown in ID)"
                    android:paddingLeft="20dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etEmailRider"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edit_text_round"
                    android:fontFamily="@font/montserrat_regular"

                    android:hint="Email (Optional)"
                    android:paddingLeft="20dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtRiderInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Tell us about yourself"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etRiderDateofBirth"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edit_text_round"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="false"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Date of Birth"
                    android:paddingLeft="20dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etRiderDriverLicense"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edit_text_round"
                    android:fontFamily="@font/montserrat_regular"

                    android:hint="Driver's License Number"
                    android:paddingLeft="20dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etRiderDriverLicenseExpiry"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edit_text_round"
                    android:fontFamily="@font/montserrat_regular"

                    android:hint="Driving license expiry"
                    android:paddingLeft="20dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etRiderCurrentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/edit_text_round"
                    android:fontFamily="@font/montserrat_regular"

                    android:hint="Current address"
                    android:paddingLeft="20dp"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtRiderVehicleInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Add Vehicle Information"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etRiderVehicleNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edit_text_round"
                    android:fontFamily="@font/montserrat_regular"

                    android:hint="Vehicle Plate Number"
                    android:paddingLeft="20dp"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/etRiderManufactureYear"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/edit_text_round"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Vehicle Manufacture Year"
                    android:paddingLeft="20dp"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnRegRiderInfo"
                        android:layout_width="250dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/graphics_button_1"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="Register"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>