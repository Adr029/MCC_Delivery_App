<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Rider.profile_fragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color">

            <ImageView
                android:id="@+id/group_2695"
                android:layout_width="match_parent"
                android:layout_height="287dp"
                android:background="#00000000"
                android:contentDescription="header"
                android:scaleType="fitXY"
                android:src="@drawable/background" />

            <Button
                android:id="@+id/btnRider_EditProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/color_transparent"
                android:drawableStart="@drawable/edit_icon"
                android:gravity="center"
                android:padding="10dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/profile_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/group_2695"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="199dp"
                android:layout_marginEnd="292dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/borderbutton"
                android:src="@drawable/profilepic" />

            <TextView
                android:id="@+id/txt_ratings"
                android:layout_width="70dp"
                android:layout_height="53dp"
                android:layout_alignBottom="@+id/group_2695"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="290dp"
                android:layout_marginTop="205dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="29dp"
                android:background="@drawable/white_button"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:padding="7dp"
                android:text="Ratings \n 4.5"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="175dp"
                android:layout_height="65dp"
                android:layout_alignBottom="@+id/group_2695"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginStart="106dp"
                android:layout_marginTop="199dp"
                android:layout_marginEnd="112dp"
                android:layout_marginBottom="23dp"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/group_2695"
                android:layout_marginTop="20dp"
                android:background="@color/background_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="30dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/borders"
                            android:padding="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/linearvehicle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="100dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_vehicle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:paddingLeft="5dp"
                                        android:text="Type of Vehicle:"
                                        android:textColor="#616161"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/riderVehicle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:padding="5dp"
                                        android:textColor="@color/strokes" />

                                </LinearLayout>

                                <LinearLayout

                                    android:id="@+id/linearplatenum"
                                    android:layout_width="219dp"
                                    android:layout_height="66dp"
                                    android:layout_marginLeft="-19dp"
                                    android:layout_toRightOf="@id/linearvehicle"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txt_PlateNum"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:text="Plate #:"
                                        android:textColor="#616161"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/riderPlate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/montserrat_medium"
                                        android:padding="5dp"
                                        android:textColor="@color/strokes" />
                                </LinearLayout>
                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/borders"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/txt_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="Location"
                                android:textColor="#616161"
                                android:textSize="14sp"

                                />

                            <TextView
                                android:id="@+id/riderAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:padding="5dp"

                                android:textColor="@color/strokes" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/borders"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/txt_contact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="Contact Number"
                                android:textColor="#616161"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/riderNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:padding="5dp"

                                android:textColor="@color/strokes" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnRider_Logout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="35dp"
                            android:layout_marginVertical="40dp"
                            android:background="@drawable/graphics_button_1"
                            android:drawableStart="@drawable/logout_icon"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingHorizontal="60dp"
                            android:text="Log Out"
                            android:textAllCaps="false"
                            android:textColor="@color/white" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/edit_text_round" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/edit_text_round"
                            android:gravity="center_vertical" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_round"
                            android:gravity="center_vertical" />


                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


</FrameLayout>