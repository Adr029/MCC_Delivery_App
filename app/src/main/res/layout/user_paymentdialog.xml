<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/paymentDialog"
    android:backgroundTint="@color/payment_dialog"
    android:background="@drawable/bottom_sheet_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya"
            android:text="Payment Method"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.048" />

        <TextView
            android:id="@+id/walletPayment"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/borders03"
            android:drawableStart="@drawable/iconwallet"
            android:drawablePadding="15dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/alegreya"
            android:foregroundGravity="center_vertical"
            android:text="Wallet"
            android:textSize="18dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.078" />

        <TextView
            android:id="@+id/onlinePayment"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/borders03"
            android:drawableStart="@drawable/iconmobile"
            android:drawablePadding="15dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/alegreya"
            android:foregroundGravity="center_vertical"
            android:text="Online Payment"
            android:textSize="18dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/walletPayment"
            app:layout_constraintVertical_bias="0.06" />

        <TextView
            android:id="@+id/cashPayment"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:background="@drawable/borders03"
            android:drawableStart="@drawable/iconcash"
            android:drawablePadding="15dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/alegreya"
            android:foregroundGravity="center_vertical"
            android:text="Cash"
            android:textSize="18dp"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onlinePayment"
            app:layout_constraintVertical_bias="0.106" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya"
            android:text="Total"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.144"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cashPayment"
            app:layout_constraintVertical_bias="0.236" />

        <TextView
            android:id="@+id/txtViewFare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya"
            android:text="Sample Fare P 100"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.841"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cashPayment"
            app:layout_constraintVertical_bias="0.236" />

        <Button
            android:id="@+id/btnPlaceOrder"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/graphics_button_1"
            android:fontFamily="@font/alegreya"
            android:text="Place Order"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cashPayment"
            app:layout_constraintVertical_bias="0.802" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>