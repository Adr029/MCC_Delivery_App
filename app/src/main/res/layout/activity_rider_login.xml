<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Rider.riderLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="478dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/topimageriderlogin" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="448dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent">

                <EditText
                    android:id="@+id/edtTextRiderNumber"
                    android:layout_width="330dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/graphics_edittext_1"
                    android:drawableStart="@drawable/phone"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/avenir"
                    android:hint="Enter your number"
                    android:inputType="phone"
                    android:padding="15dp"
                    android:textColorHint="#A7A9B7"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView9"
                    app:layout_constraintVertical_bias="0.063" />

                <EditText
                    android:id="@+id/edtTextRiderPassword"
                    android:layout_width="330dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/graphics_edittext_1"
                    android:drawableStart="@drawable/lock"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/avenir"
                    android:hint="Enter your password"
                    android:padding="15dp"
                    android:textColorHint="#A7A9B7"
                    android:textSize="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtTextRiderNumber"
                    app:layout_constraintVertical_bias="0.092" />

                <TextView
                    android:id="@+id/forgotPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/alegreya"
                    android:text="Forgot Password"
                    android:textColor="#68B3F9"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.158"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtTextRiderPassword"
                    app:layout_constraintVertical_bias="0.043" />

                <Button
                    android:id="@+id/btnLoginRider"
                    android:layout_width="330dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/graphics_button_1"
                    android:fontFamily="@font/alegreya"
                    android:text="Log In"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edtTextRiderPassword"
                    app:layout_constraintVertical_bias="0.311" />

                <Button
                    android:id="@+id/btnRegisterRider"
                    android:layout_width="330dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="40dp"
                    android:background="@drawable/graphics_button_1"
                    android:fontFamily="@font/alegreya"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button3" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>